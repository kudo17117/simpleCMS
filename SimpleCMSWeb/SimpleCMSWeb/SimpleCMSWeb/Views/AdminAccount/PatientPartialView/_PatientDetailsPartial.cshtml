@model SimpleCMSWeb.Models.Patient

<div class="patient-profile">
    <div class="row">
        <!-- Personal Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="text-muted small">Birth Date</div>
                        <div>@Model.Birthdate?.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Age</div>
                        <div>@Model.Age</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Gender</div>
                        <div>@Model.Gender</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Civil Status</div>
                        <div>@Model.Civilstatus</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Blood Type</div>
                        <div>@Model.Bloodtype</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Religion</div>
                        <div>@Model.Religion</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Nationality</div>
                        <div>@Model.Nationality</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact & Medical Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="text-muted small">Address</div>
                        <div>@Model.Homeaddress</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Mobile</div>
                        <div>@Model.Mobileno</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Telephone</div>
                        <div>@Model.Telephoneno</div>
                    </div>
                    <div class="mb-4">
                        <div class="text-muted small">Email</div>
                        <div>@Model.Emailaddress</div>
                    </div>

                    <hr class="my-3">

                    <h6 class="mb-3">Medical Information</h6>
                    <div class="mb-3">
                        <div class="text-muted small">Allergies</div>
                        <div>@(string.IsNullOrEmpty(Model.Allergies) ? "None" : Model.Allergies)</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Family History</div>
                        <div>@(string.IsNullOrEmpty(Model.Familymedicalhistory) ? "None" : Model.Familymedicalhistory)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .patient-profile .card {
        border: 1px solid #e0e0e0;
        border-radius: 4px;
    }

    .patient-profile .card-header {
        padding: 12px 16px;
        border-bottom: 1px solid #e0e0e0;
        background-color: #f8f9fa;
    }

    .patient-profile .card-body {
        padding: 16px;
    }
</style>