<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleCMSWeb</title>

    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="icon" type="image/png" href="~/img/favicon.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

    @* fonts *@
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    @* css files *@

    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/aos/aos.css" rel="stylesheet">
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet" />
</head>

<body>
    <header id="header" class="header sticky-top" style="z-index: 1040;">
        <div class="branding d-flex align-items-center">

            <div class="position-relative d-flex align-items-center justify-content-between container">
                <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto">
                    <!-- Uncomment the line below if you also wish to use an image logo -->
                    <!-- <img src="assets/img/logo.png" alt=""> -->
                    <h1 class="sitename">SIMPLECMS</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a href="/#hero">Home<br></a></li>
                        <li><a href="/#about">About</a></li>
                        <li><a href="/#services">Services</a></li>
                        <li><a href="/#departments">Departments</a></li>
                        <li><a href="/#doctors">Doctors</a></li>
                        <li>
                            <a href="/#appointment" class="nav-link d-block d-sm-none">
                                Search Now
                            </a>
                        </li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>
                <a class="cta-btn d-none d-sm-block" href="/#appointment">Search Now</a>
            </div>

        </div>

    </header>
    <div class="container">
        <main class="main">
            @RenderBody()
        </main>
    </div>
    <footer id="footer" class="footer light-background border-top">

        <div class="footer-top container">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6 footer-about">
                    <a href="#hero" class="logo d-flex align-items-center">
                        <span class="sitename">SIMPLECMS</span>
                    </a>
                    <div class="footer-contact pt-3">
                        <p>265 Circle A St., Phase 1 Ecoland Subdivision,</p>
                        <p>Davao City, Philippines</p>
                        <p class="mt-3"><strong>Contact Us:</strong> <span>(082) 224 2105</span></p>
                        <p>
                            <strong>Visit:</strong><a href="https://www.simplesoftechsolutionsco.com/"> <span>Simple SoftTech</span></a>
                        </p>
                    </div>
                    <div class="social-links d-flex mt-4">
                        <a asp-controller="ErrorHandler" asp-action="BadGateWay"><i class="bi bi-twitter-x"></i></a>
                        <a asp-controller="ErrorHandler" asp-action="BadGateWay"><i class="bi bi-facebook"></i></a>
                        <a asp-controller="ErrorHandler" asp-action="BadGateWay"><i class="bi bi-instagram"></i></a>
                        <a asp-controller="ErrorHandler" asp-action="BadGateWay"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a href="#hero">Home</a></li>
                        <li><a href="#about">About us</a></li>
                        <li><a href="#services">Services</a></li>
                        <li><a asp-controller="ErrorHandler" asp-action="BadGateWay">Terms of service</a></li>
                        <li><a asp-controller="ErrorHandler" asp-action="BadGateWay">Privacy policy</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Our Services</h4>
                    <ul>
                        <li><a asp-controller="ErrorHandler" asp-action="BadGateWay">Web Design</a></li>
                        <li><a asp-controller="ErrorHandler" asp-action="BadGateWay">Web Development</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="copyright container mt-4 text-center">
            <p>© <span>Copyright</span> <strong class="sitename px-1">SIMPLECMS</strong> <span>All Rights Reserved</span></p>
            <div class="credits">
                Designed by <a href="https://web.facebook.com/arielnoja2002">Ariel Noja & Malbert Cardoza</a> Distributed by <a href="https://www.simplesoftechsolutionsco.com/">Simple SoftTech</a>
            </div>
        </div>

    </footer>

    @* Scroll Top *@
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    @* Preloader *@
    <div id="preloader"></div>

    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/glightbox/js/glightbox.js"></script>
    <script src="~/lib/purecounter/purecounter_vanilla.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
