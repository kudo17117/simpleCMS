@{
    Layout = "_AuthLayout";
}

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-sm border-0 rounded-4 p-5" style="max-width: 600px; width: 100%;">
        <div class="text-center mb-4">
            <i class="bi bi-check-circle-fill text-success display-1"></i>
        </div>
        <h1 class="h3 fw-bold text-center mb-3">Thank You for Registering!</h1>
        <p class="text-center text-muted mb-3">
            Your registration request has been received. Our admin will review and approve your account shortly.
        </p>
        <p class="text-center text-muted mb-4">
            You will receive an email once your account is approved and ready to use.
        </p>
        <div class="text-center">
            <a asp-controller="DoctorAccount" asp-action="Login" class="btn btn-primary px-4">Return to Login</a>
        </div>
    </div>
</div>
