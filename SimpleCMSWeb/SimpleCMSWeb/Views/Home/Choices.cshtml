@{  
    ViewBag.Title = "Login Portal";
    Layout = "_AuthLayout";
}

<!-- Loading Overlay -->
<div id="loadingOverlay" style="display:none; position:fixed; z-index:1050; top:0; left:0; width:100vw; height:100vh; background:rgba(255,255,255,0.85);">
    <div class="d-flex justify-content-center align-items-center" style="height:100vh;">
        <div class="spinner-border text-primary" style="width:3rem; height:3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<!-- Background Wrapper -->
<div style="min-height: 100vh; background: linear-gradient(90deg, #1e5fa3 0%, #3a8dde 100%);">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">

        <!-- White Card Container -->
        <div class="card rounded-4 border-0 p-5 shadow-lg" style="max-width: 400px; width: 100%; background-color: #ffffff;">
            <h4 class="fw-bold mb-4 text-center" style="color: #1e5fa3;">Please select an option</h4>

            <div class="d-grid gap-3">
                <!-- Patient Login -->
                <a id="loginBtn" asp-controller="PatientAccount" asp-action="Login"
                   class="btn btn-primary btn-lg fw-semibold d-flex align-items-center justify-content-center"
                   style="background-color: #1e5fa3; border: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                         class="bi bi-person-circle me-2" viewBox="0 0 16 16">
                        <path d="M11 10a2 2 0 1 0-4 0 2 2 0 0 0 4 0z" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1   1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0 0 14A7 7 0 0 0 8 1z" />
                    </svg>
                    Patient Login
                </a>

                <!-- Doctor Login -->
                <a id="registerBtn" asp-controller="DoctorAccount" asp-action="Login"
                   class="btn btn-primary btn-lg fw-semibold d-flex align-items-center justify-content-center"
                   style="background-color: #3a8dde; border: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                         class="bi bi-person-badge me-2" viewBox="0 0 16 16">
                        <path d="M6.5 2a.5.5 0 0 0-.5.5V3h-1A1.5 1.5 0 0 0 3.5 4.5v7A1.5 1.5 0 0 0 5 13h6a1.5 1.5 0 0 0 1.5-1.5v-7A1.5 1.5 0 0 0 11 3h-1v-.5a.5.5 0 0 0-.5-.5h-3zm0 1h3V3h-3v.5zm-2 1.5A.5.5 0 0 1 5 4h6a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5H5a.5.5 0 0 1-.5-.5v-7z" />
                        <path d="M8 7a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zm0 1a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm-2.5 3a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v.5h-5v-.5z" />
                    </svg>
                    Doctor Login
                </a>

                <!-- Back to Home -->
                <a id="backBtn" asp-controller="Home" asp-action="Index"
                   class="btn btn-lg fw-semibold d-flex align-items-center justify-content-center custom-back-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                         class="bi bi-house-door me-2" viewBox="0 0 16 16">
                        <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 2 7.5V14a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V7.5a.5.5 0 0 0-.146-.354l-6-6zM2.5 7.707L8 2.207l5.5 5.5V14a1 1 0 0 1-1 1h-8a1 1 0 0 1-1-1V7.707z" />
                        <path d="M13 2.5V6l-5-5-5 5V2.5a.5.5 0 0 1 1 0V6.293l4-4 4 4V2.5a.5.5 0 0 1 1 0z" />
                    </svg>
                    Back to Home
                </a>
            </div>
        </div>

    </div>
</div>


<script>
    function showLoadingAndRedirect(element) {
        event.preventDefault();
        document.getElementById('loadingOverlay').style.display = 'block';
        setTimeout(function () {
            window.location.href = element.href;
        }, 1200);
    }

    document.getElementById('loginBtn').addEventListener('click', function (event) {
        showLoadingAndRedirect(this);
    });
    document.getElementById('registerBtn').addEventListener('click', function (event) {
        showLoadingAndRedirect(this);
    });
    document.getElementById('backBtn').addEventListener('click', function (event) {
        showLoadingAndRedirect(this);
    });
</script> 