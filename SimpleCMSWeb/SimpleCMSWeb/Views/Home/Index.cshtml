@model SimpleCMSWeb.Models.ModelView.StatsViewModel

@{
    ViewData["Title"] = "Home Page";
}



<!-- Loading Overlay -->
<div id="loadingOverlay" style="display:none; position:fixed; z-index:1050; top:0; left:0; width:100vw; height:100vh; background:rgba(255,255,255,0.85);">
    <div class="d-flex justify-content-center align-items-center" style="height:100vh;">
        <div class="spinner-border text-primary" style="width:3rem; height:3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<!-- Hero Section -->
<section id="hero" class="hero section light-background">

    <img src="~/img/hero-bg.jpg" alt="" data-aos="fade-in">

    <div class="position-relative container">

        <div class="welcome position-relative text-center" data-aos="fade-down" data-aos-delay="100">
            <h2>WELCOME TO <span style="background-color: rgba(255,255,255,0.8); padding: 0 10px; border-radius: 5px;">SIMPLECMS</span></h2>
        </div><!-- End Welcome -->

        <div class="content row gy-4">
            <!-- Why Box -->
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="why-box" data-aos="zoom-out" data-aos-delay="200">
                    <h3>Why Choose PatientPortal?</h3>
                    <p>
                        PatientPortal makes healthcare easier by allowing patients to book appointments, communicate securely with providers, and receive timely updates — all through a user-friendly and accessible platform designed for convenience and peace of mind.
                    </p>
                    <div class="text-center">
                        <a href="#about" class="more-btn"><span>Learn More</span> <i class="bi bi-chevron-right"></i></a>
                    </div>
                </div>
            </div><!-- End Why Box -->
            <!-- Vision, Mission, Core Values -->
            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="d-flex flex-column justify-content-center w-100">
                    <div class="row gy-4">

                        <!-- Vision -->
                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box w-100 rounded bg-white p-4 text-center shadow-sm" data-aos="zoom-out" data-aos-delay="300">
                                <i class="fas fa-eye fa-3x text-primary mb-3"></i>
                                <h4 class="fw-semibold">Vision</h4>
                                <p>To be the leading patient portal platform that empowers individuals to access and manage their healthcare seamlessly.</p>
                            </div>
                        </div>

                        <!-- Mission -->
                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box w-100 rounded bg-white p-4 text-center shadow-sm" data-aos="zoom-out" data-aos-delay="400">
                                <i class="fas fa-bullseye fa-3x text-success mb-3"></i>
                                <h4 class="fw-semibold">Mission</h4>
                                <p>To deliver secure, accessible, and user-friendly digital health solutions that improve communication and care coordination.</p>
                            </div>
                        </div>

                        <!-- Core Values -->
                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box w-100 rounded bg-white p-4 text-center shadow-sm" data-aos="zoom-out" data-aos-delay="500">
                                <i class="fas fa-hand-holding-heart fa-3x text-info mb-3"></i>
                                <h4 class="fw-semibold">Core Values</h4>
                                <p>Integrity, Innovation, Compassion, and Collaboration — these principles guide every step in our commitment to patients.</p>
                            </div>
                        </div>

                        <!-- Dashboard Button -->
                        <div class="col-12 mt-4 text-center" data-aos="zoom-out" data-aos-delay="600">
                            <a asp-action="Choices" class="btn btn-primary btn-lg px-5">
                                Go to Login
                            </a>
                        </div>

                    </div>
                </div>
            </div><!-- End Vision/Mission/Core Values -->
        </div><!-- End Content -->

    </div>

</section><!-- /Hero Section -->
<!-- About Section -->
<section id="about" class="about section">

    <div class="container">

        <div class="row gy-4 gx-5">

            <div class="col-lg-6 position-relative align-self-start" data-aos="fade-up" data-aos-delay="200">
                <img src="~/img/about.jpg" class="img-fluid" alt="">
                <a href="https://www.youtube.com/watch?v=Y7f98aduVJ8" class="glightbox pulsating-play-btn"></a>
            </div>

            <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                <h3>About Us</h3>
                <p>
                    At PatientPortal, we are committed to enhancing the healthcare experience by bridging the gap between patients and providers. Our platform offers seamless appointment scheduling, timely updates, and secure communication — all designed to empower patients and improve access to care. We believe in making healthcare more connected, efficient, and patient-centered.
